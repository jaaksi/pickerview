<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="用在View中" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="选择时间：" />

    <FrameLayout
        android:id="@+id/timepickerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="只使用PickerView" />

    <org.jaaksi.pickerview.widget.PickerView
        android:id="@+id/pickerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pv_disallow_intercept_touch="true"
        app:pv_is_circulation="false"
        app:pv_item_size="50dp"
        app:pv_orientation="horizontal"
        app:pv_visible_item_count="7" />
</LinearLayout>